<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bg_impact_score.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid background color -->
    <solid android:color="#FF6D00" /> <!-- Vibrant orange color -->

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Gradient effect (optional) -->
    <gradient
        android:angle="90"
        android:startColor="#FF9100"
        android:endColor="#FF6D00"
        android:type="linear" />

    <!-- Stroke/border -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"
        android:dashWidth="0dp"
        android:dashGap="0dp" />

    <!-- Padding -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />
</shape>